/* pages/fankui/fankui.wxss */
page{
    background-color: rgb(247, 247, 247);
}
.containerTwo {
    margin: 200rpx auto;
    background-color: white;
    border-radius: 20rpx;
    box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
    width: 95%;

}
form {
    padding: 20rpx;
    border-radius: 10rpx;
}

.form-group {
width: 95%;
margin: 20rpx auto;
display: flex;
flex-direction: column;
margin-bottom: 20rpx;
}

.form-group:last-child {
margin-bottom: 0;
}

.form-label {
font-size: 28rpx;
color: #666;
margin-bottom: 10rpx;
}

.form-input {
height: 60rpx;
border: 1rpx solid #ccc;
border-radius: 5rpx;
padding: 0 20rpx;
font-size: 28rpx;
color: #333;
transition: border-color 0.2s ease-in-out;
}

.form-input:focus {
border-color: #99CC99;
}

.submit-button {
display: block;
width: 100%;
height: 80rpx;
line-height:1.5;
text-align: center;
background-color: #99CC99;
color: #fff;
font-size: 32rpx;
border-radius: 20rpx;
transition: background-color 0.2s ease-in-out;
}

.submit-button:hover {
background-color: #99CC99;
}

.submit-button:active {
background-color: #99CC99;
}
  