/* pages/login/login.wxss */
page{
    background-color: rgb(247, 247, 247);
  }
  .login_Image{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin-top: 200rpx;
  }
  .avatar{
    margin: 0 auto;
  }
  .avatarImg{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 2rpx solid white;
    background-color: white;
    margin: 0 auto;
  }
  input_Info{
    width:100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  
  }
  .login_input{
    width: 450rpx;
    height: 80rpx;
    background-color: white;
    border-radius: 20rpx;
    margin: 30rpx auto;
  }
  .login_sub{
    border-radius: 30rpx;
    background-color: #99CC99;
    text-align: center;
    color:white;
    font-weight: 550;
    margin-top: 50rpx;
  }
  

  