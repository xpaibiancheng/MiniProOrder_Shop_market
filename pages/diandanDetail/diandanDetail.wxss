/* pages/diandanDetail/diandanDetail.wxss */
page{
    background-color:rgb(247, 247, 247);
}
.titleAndYl{
    width: 97%;
    margin: 20rpx auto 0rpx;
    background-color: white;
    border-radius:20rpx 20rpx 0rpx 0rpx ;
}
.title{
    font-size: 40rpx;
    padding-top: 30rpx;
    margin-left: 20rpx;
}
.yl{
    margin-top: 20rpx;
    padding-bottom: 30rpx;
    color: rgb(179, 174, 174);
    font-size: 30rpx;
    margin-left: 20rpx;
}
.shuxing{
    width: 97%;
    margin: 0rpx auto;
    background-color: white;
    border-radius:0rpx 0rpx 20rpx 20rpx;
}
.shuxingRows{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 20rpx;
}
.shuxingRowsValue{
    width: 80%;
    display:flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    align-self: start;
}
.RowValuesGroups{
    margin-left: 20rpx;
    text-align: center; 
    background-color: rgb(241, 239, 239);
    border-radius: 10rpx;
    padding: 15rpx 25rpx;
    margin-top: 20rpx;
    color: rgb(141, 140, 140);
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
}
.shuxingRowsName{
    
    width: 20%;
    text-align: left
}
.detailPhotos{
    width: 97%;
    margin: 20rpx auto;
    background-color: white;
    border-radius: 20rpx;

}
.detailPhotosText{
    margin-left: 20rpx;
    padding-top: 20rpx;
    margin-bottom: 20rpx;
    font-size: 40rpx;

}
.detailPhotosImgs{
    width: 97%;
    margin: 20rpx auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.detailPhotosImgs>image{
    width: 100%;
    max-height: 100%;
}
.paySub{
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    padding: 20rpx 0;
    background-color: rgb(247, 247, 247);
    border-radius: 40rpx 40rpx 0rpx 0rpx;
    border-top: solid 5rpx #ccc;
}
.paySubTop{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 95%;
    height: 30%;
    margin: auto;
}
.paySubTopRight{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

}
.paySubRowsTow{
    width: 45%;
    padding: 5rpx 0rpx;
    border-radius: 50rpx;
    background-color: tomato;
    color: white;
    font-size: 37rpx;
    text-align: center;
    line-height: 2;
}
.paySubRowsThree{
    width:45%;
    padding: 5rpx 0rpx;
    border-radius:50rpx;
    background-color:royalblue;
    color: white;
    font-size: 37rpx;
    text-align: center;
    line-height: 2;
}
.paySubRowsOne{
    font-size: 40rpx;
    color: rgba(249, 108, 47, 1);
}
.paySubTopRightMul{
    width: 45rpx;
    height: 45rpx;
    border-radius: 50%;
    border: solid 3rpx #99CC99;
    font-size: 40rpx;
    text-align: center;
    color: #99CC99;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.paySubTopRightAdd{
    width: 45rpx;
    height: 45rpx;
    border-radius: 50%;
    background-color:#99CC99 ;
    font-size: 40rpx;
    color: white;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.paySubTopRightNum{
    padding: 0 15rpx;
    text-align: center;
    font-size: 45rpx;
}
.paySubbottom{
    width:90%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin:15rpx  auto;

}
.handleIndexStyle{
    background-color:#99CC99;
    color: white;
    font-weight: 550;
}

/* 选择付款方式 */
.payStyleSelect{
    width: 85%;
    background-color: skyblue;
    border-radius: 20rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.payStyleTop{
    width: 97%;
    margin: auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: solid cadetblue 3rpx;
}

.payStyleMiddle{
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    margin-left: 20rpx;
}
.payStyleBottom{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 40rpx 0;
}
.payStyleBottom>view{
    width: 30%;
    padding: 15rpx 20rpx;
    margin-left: 15rpx;
    border-radius: 30rpx;
    background-color: white;
    text-align: center;
    font-weight: 550;
}