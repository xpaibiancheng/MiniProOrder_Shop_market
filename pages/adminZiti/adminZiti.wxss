/* pages/adminUserEnd/adminUserEnd.wxss */
page{
    background: rgba(245, 249, 250, 1);
}
.navtop{
    width: 100%;
    height: 80rpx;
    background-color: white;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.navtopRow{
    width: 50%;
    padding-bottom: 15rpx;
    text-align: center;
}
.clickStyle{
    color: rgba(249, 108, 47, 1);
    border-bottom: 5rpx solid rgba(249, 108, 47, 1);
    font-weight: 550;
}
.status{
    width: 95%;
    
    background-color: white;
    border-radius: 20rpx;
    margin: 20rpx auto;
    padding-bottom: 20rpx;
}
.statusRows{
    display: flex;
    flex-direction: row;
    border-bottom: 2rpx dotted #ccc;
    margin-top: 20rpx;
    margin-left: 20rpx;
    padding-bottom: 15rpx;
}
.rows{
    width: 150rpx;
}
.rowsInfo{
    padding-left: 15rpx;
    line-height: 1.5;
}


.shopOrder{
    width: 95%;
    display: flex;
    flex-direction: row;
    justify-content:space-between;
    align-items: center;
    margin: 20rpx auto;
    background-color:#f8f0f0;
    border-radius: 20rpx;
}
.shopOrderImg{
    width: 25%;
    height: 180rpx;
    border-radius: 15rpx;
    margin-left: 20rpx;
}
.shopOrderText{
    width: 70%;
    height: 200rpx;
    font-size: 35rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.shopOrderTextTitle{
    height: 45%;
    width: 95%;
    /* 弹性盒子布局 */
    display: -webkit-box;
    /* 超出 文本省略号*/
    text-overflow: ellipsis;
    /* 隐藏超出文本*/
    overflow: hidden;
    /* 允许最大文本行数 */
    -webkit-line-clamp: 2;
    /* 自动换行 */
    word-break: break-all;
    -webkit-box-orient: vertical;
}