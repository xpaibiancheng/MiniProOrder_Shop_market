/* pages/detail/detail.wxss */
page{
    background-color: rgb(247, 247, 247);
  }
  .detail_Swiper{
    width: 98%;
    margin: 10rpx auto 0;
  }
  /* 商品信息 */
  .detail_attribute{
    width: 95%;
    margin: 20rpx auto;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: white;
    border-radius: 10rpx;
  }
  .attribute_left{
    width: 80%;
    margin-left: 10rpx;
  }
  /* 字体颜色 */
  .left_price{
    color: orangered;
    font-size: 40rpx;
  }
  /* 商品介绍 */
  .left_title{
    width: 100%;
    /* 弹性盒子布局 */
    display: -webkit-box;
    /* 超出 文本省略号*/
    text-overflow: ellipsis;
    /* 隐藏超出文本*/
    overflow: hidden;
    /* 允许最大文本行数 */
    -webkit-line-clamp: 2;
    /* 自动换行 */
    word-break: break-all;
    -webkit-box-orient: vertical;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
  }
  .left_stamp{
    color: rgb(107, 107, 107);
    font-size: 30rpx;
  }
  .attribute_right{
    width: 20%;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .attribute_right>view{
    height:100rpx;
    width: 100%;
  
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: rgb(107, 107, 107);
    font-size: 27rpx;
    margin: 20rpx auto;
  }
  .attribute_right>view>image{
    width: 60rpx;
    height: 60rpx;
  }
  /*comment */
  .detai_comment{
    width: 95%;
    height: 500rpx;
    margin: 20rpx auto;
    
    background-color: white;
    border-radius: 10rpx;
  }
  .comment_top{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
  }
  .comment_top>view{
    width: 30%;
  }
  .top_left{
    margin-left: 20rpx;
  }
  .top_right{
    font-size: 30rpx;
    color: rgb(107, 107, 107);
    margin-right: 20rpx;
  }
  .comment_rows{
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-top: 15rpx;
    margin-left: 30rpx;
    margin-bottom: 10rpx;
