.row{
    width: 95%;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 20rpx auto;
   height: 60rpx;
}
.row>input{
    margin-left: 20rpx;
}
.time-picker{
    color: rgb(107, 107, 107);
}
.row_fenge{
    width: 35%;
    border-top: #D3D3D3 solid 2rpx;
}
.row_lr_fenge{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 40rpx;
}
.orderNumInfo{
    width: 90%;
    margin: 20rpx auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-self: start;
}
.orderNumInfoRow{
    width: 40%;
    height: 100rpx;
    margin: 20rpx 20rpx;
    justify-content: center;
    align-items: center;
    border: #C0C0C0 solid 2rpx;
    text-align: center;
    line-height: 2.5;
    font-size: 37rpx;
    border-radius: 20rpx;
}
.selectQueding{
    color: seagreen;
    border: seagreen solid 2rpx;
    font-weight: 550;
}