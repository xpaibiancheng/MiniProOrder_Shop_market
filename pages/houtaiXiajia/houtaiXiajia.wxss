/* pages/houtaiXiajia/houtaiXiajia.wxss */
page{
    background-color: rgb(247, 247, 247);
}
.xiajia{
    width: 100%;
    background-color: white;
    margin: 20rpx auto;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    overflow: hidden;
}
.xiajiaLeft{
    width: 30%;
    height: 200rpx;
}
.xiajiaMiddle{
    width: 50%;
    height: 98%;
    margin-left: 20rpx;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
}
.xiajiaRight{
    width: 20%;
    height: 100%;
}
.xiajiaLeft>image{
    width: 100%;
    height: 100%;
}
.xiajiaRight>image{
    width: 70rpx;
    height: 70rpx;
    margin-bottom: 20rpx;
}
.middle_top{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-top: 15rpx;
    
}
.middle_text{
    /* 弹性盒子布局 */
  display: -webkit-box;
  /* 超出 文本省略号*/
  text-overflow: ellipsis;
  /* 隐藏超出文本*/
  overflow: hidden;
  /* 允许最大文本行数 */
  -webkit-line-clamp: 2;
  /* 自动换行 */
  word-break: break-all;
  -webkit-box-orient: vertical;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}
.middle_price{
    margin-bottom: 15rpx;
}
.xiajiaRight{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}